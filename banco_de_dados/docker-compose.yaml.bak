services:
  postgres:
    image: postgres:16
    container_name: estocar_postgres
    restart: always
    environment:
      POSTGRES_DB: estocar
      POSTGRES_USER: estocar_user
      POSTGRES_PASSWORD: "123321"
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
      - ./postgres-init/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U estocar_user -d estocar"]
      interval: 10s
      timeout: 5s
      retries: 5
volumes:
  pgdata:
    driver: local
